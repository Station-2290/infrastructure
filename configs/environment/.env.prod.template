# Station2290 Production Environment Configuration
# Copy this file to .env.prod and update all values

# Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=station2290_user
POSTGRES_PASSWORD=CHANGE_THIS_SECURE_PASSWORD
POSTGRES_DB=station2290
DATABASE_URL=postgresql://station2290_user:CHANGE_THIS_SECURE_PASSWORD@postgres:5432/station2290

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# API Configuration
NODE_ENV=production
API_PORT=3000
JWT_SECRET=CHANGE_THIS_JWT_SECRET_MIN_32_CHARACTERS
JWT_REFRESH_SECRET=CHANGE_THIS_REFRESH_SECRET_MIN_32_CHARACTERS

# External Services
OPENAI_API_KEY=sk-your-openai-api-key
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-whatsapp-webhook-verify-token

# Domain Configuration
DOMAIN=station2290.ru
SSL_EMAIL=admin@station2290.ru

# Frontend URLs
NEXT_PUBLIC_API_URL=https://api.station2290.ru
VITE_API_URL=https://api.station2290.ru

# Monitoring
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE="0 2 * * *"

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Security
CORS_ORIGIN=https://station2290.ru,https://api.station2290.ru,https://adminka.station2290.ru,https://orders.station2290.ru,https://bot.station2290.ru